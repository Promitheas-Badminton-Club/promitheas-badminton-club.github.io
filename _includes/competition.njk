{% macro ranking(ladder) %}
<ol>
  {% if ladder and ladder.length > 0 %}
    {% for entry in ladder %}
      {% if entry.addHr %}
        <h3>Level {{ entry.level }}</h3>
      {% endif %}
      <li>
        {{ entry.name }}
        {% if entry.isFirst %}<span class="medal">ðŸ¥‡</span>{% endif %}
        {% if entry.isSecond %}<span class="medal">ðŸ¥ˆ</span>{% endif %}
        {% if entry.isThird %}<span class="medal">ðŸ¥‰</span>{% endif %}
      </li>
    {% endfor %}
  {% else %}
    <p>No ladder entries available.</p>
  {% endif %}
</ol>
{% endmacro %}

{% macro matches(games) %}
<figure>
  <table tabindex="0">
    <thead>
      <th>Challenger</th>
      <th>Challenged</th>
      <th>Results</th>
      <th>Date</th>
    </thead>
    <tbody>
    {% for game in games | reverse %}
      <tr>
        <td>
        {{game.Challenger}} 
        </td>

        <td>
        {{game.Challenged}}
        </td>

        <td>
        {% for result in game.Results %}
          <span>{{result[0]}}-{{result[1]}}</span>
        {% endfor %}
        </td>

        <td>
        {{game.Timestamp | datetime}}
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</figure>

{% endmacro %}

